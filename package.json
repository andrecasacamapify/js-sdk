{
    "name": "mapify-sdk",
    "version": "0.0.1",
    "description": "Mapify javascript SDK",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/mapifyplatform/js-sdk"
    },
    "files": [
        "dist/src"
    ],
    "author": "Mapify",
    "license": "Apache-2.0",
    "scripts": {
        "clean": "yarn clean:build; rm -rf node_modules; rm -rf ./src/**/*.js*; rm -rf ./test/**/*.js*",
        "clean:build": "rm -rf dist",
        "build": "yarn clean:build; yarn lint && tsc",
        "lint": "tslint --project tsconfig.json ./src/**/*.ts ./test/**/*.ts",
        "dev": "nodemon --config dev.nodemon.json",
        "test": "jest",
        "docker:test": "docker build .",
        "test:debug": "NODE_ENV=test nodemon --config test.nodemon.json"
    },
    "keywords": [
        "javascript",
        "NodeJS",
        "SDK"
    ],
    "dependencies": {
        "axios": "^0.18.0",
        "jsonwebtoken": "^8.5.1",
        "nock": "^10.0.6"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/jest": "^24.0.12",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/nock": "^10.0.2",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "ts-lint": "^4.5.1",
        "ts-node": "^8.1.0",
        "tslib": "^1.9.3",
        "typescript": "^3.4.5",
        "typescript-tslint-plugin": "^0.3.1"
    }
}
